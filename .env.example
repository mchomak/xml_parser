# Parser Configuration
# Copy this file to .env and adjust values as needed

# Update interval in seconds
UPDATE_INTERVAL=15  

# Number of top exchangers to collect per direction
TOP_COUNT=3

# Output XML file path
OUTPUT_XML_PATH=rates.xml

# Excluded exchangers (our own, comma-separated)
# These will be ignored when selecting the best competitor rate
EXCLUDED_EXCHANGERS=Frax,Taksa,Bastion

# Maximum retry attempts for failed operations
MAX_RETRIES=3

# Retry delay in seconds (base delay, doubles on each retry)
RETRY_DELAY=2

# Number of parallel browser instances for fetching
# Higher = faster but uses more memory
PARALLEL_WORKERS=3

# Browser mode (true = headless, false = visible)
# Set to true for server deployment
HEADLESS=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=parser.log

# Page load timeout in seconds
PAGE_TIMEOUT=90

# Element wait timeout in seconds
ELEMENT_TIMEOUT=30

# Calculator update wait time in seconds
CALCULATOR_WAIT=1.5

# Web server port (Render sets this automatically)
PORT=5000