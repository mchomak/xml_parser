# Exnode Rate Exporter - Environment Variables
# =============================================
# Copy this file to .env and customize the values.
# Environment variables take precedence over config.yaml values.

# Exchanger IDs (comma-separated)
# Format: id1:name1,id2:name2,id3:name3
EXCHANGERS=exchanger1:Exchanger 1,exchanger2:Exchanger 2,exchanger3:Exchanger 3

# Exnode API Settings
EXNODE_BASE_URL=https://exnode.ru
EXNODE_API_ENDPOINT=/api/exchangers/{exchanger_id}/rates
EXNODE_DIRECTIONS_ENDPOINT=/api/exchangers/{exchanger_id}/directions

# Update interval in seconds
UPDATE_INTERVAL_SECONDS=30

# Output file path
OUTPUT_PATH=./request-exportxml.xml
OUTPUT_ENCODING=utf-8

# HTTP Server (set to true to enable)
HTTP_ENABLED=false
HTTP_HOST=0.0.0.0
HTTP_PORT=8080

# Default field values
DEFAULT_AMOUNT=0
DEFAULT_MIN_AMOUNT=0
DEFAULT_MAX_AMOUNT=999999999
DEFAULT_PARAM=0
DEFAULT_IN_AMOUNT=1

# Network settings
NETWORK_TIMEOUT=30
NETWORK_MAX_RETRIES=3
NETWORK_RETRY_BASE_DELAY=1.0
NETWORK_RETRY_MAX_DELAY=30.0
USER_AGENT=ExnodeRateExporter/1.0

# Logging
LOG_LEVEL=INFO

# XML Validation
VALIDATE_XML=true
# XSD_PATH=./schema.xsd
